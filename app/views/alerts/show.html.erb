<h2>
  <%= @alert.name %>
  <%= link_to(refresh_alert_path(@alert), method: :post) do %>
    <%= fa_icon('sync-alt', size: 'xs', title: 'Refresh listings') %>
  <% end %>
</h2>

<div class="row">
  <div class="col-md-8">
    <%= render 'shared/tags', tags_hash: @alert.filtered_search_params %>
  </div>
  <div class="col-md">
    Average price:
    <%= @alert.average_price %>
    Median price:
    <%= @alert.median_price %>
    Min price:
    <%= @alert.min_price %>
    Max price:
    <%= @alert.max_price %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-hover table-bordered table-sm">
    <thead>
      <tr>
        <th>
        <th scope="col"><%= sort_link @q, :title, ['favorite desc', :title] %></th>
        <th scope="col"><%= sort_link @q, :price, ['favorite desc', :price] %></th>
        <th scope="col"><%= sort_link @q, :bedrooms, ['favorite desc', :bedrooms] %></th>
        <th scope="col"><%= sort_link @q, :square_feet, ['favorite desc', :square_feet] %></th>
        <th scope="col"><%= sort_link @q, :hood, ['favorite desc', :hood] %></th>
        <th scope="col"><%= sort_link @q, :date, ['favorite desc', :date] %></th>
        <th>
      </tr>
      <tr>
        <th>
        <th>
        <th>
        <th>
        <th>
        <th>
          <%= search_form_for @q, url: alert_path do |f| %>
            <%= f.hidden_field :s, value: params[:q].try(:[], :s) %>
            <%= f.text_field :hood_cont %>
          <% end %>
        </th>
        <th>
        <th>
      </tr>
    </thead>
    <tbody>
      <% craigslist_posts.order(created_at: :desc).each do |post| %>
        <tr scope="row" id="post_<%= post.id %>" class="<%= post.seen? ? '' : 'table-primary' %>">
          <td>
            <%= link_to(favorite_craigslist_post_path(post), class: 'favorite', method: :post, remote: true) do %>
              <%= post.favorite? ? fa_icon('star', size: 'lg', class: 'star-outline') : fa_icon('star', size: 'lg', type: :regular) %>
            <% end %>
          </td>
          <td><%= link_to(post.title, post.link, target: :_blank) %></td>
          <td><%= post.price %></td>
          <td><%= post.bedrooms %></td>
          <td><%= post.square_feet %></td>
          <td><%= post.hood %></td>
          <td><%= post.date %></td>
          <td width="7%">
            <%= link_to(craigslist_post_path(id: post.id, post: { seen: true }), method: :patch, class: 'mark_seen', title: 'Mark seen', remote: true) do %>
              <%= fa_icon('eye', size: 'lg') %>
            <% end %>
            <%= link_to( craigslist_post_path(post), method: :delete, title: 'Delete', remote: true) do %>
              <%= fa_icon('trash', size: 'lg',  style: 'color: red') %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<%== pagy_bootstrap_nav(@pagy) %>
