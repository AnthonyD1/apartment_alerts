<style>
table, th, td {
  border: 1px solid black;
  border-collapse: collapse;
}
th, td {
  padding: 5px;
}
th {
  text-align: left;
}
</style>

<h2> Alerts
  <%= link_to(new_alert_path) do %>
    <%= fa_icon('plus-circle') %>
  <% end %>
</h2>

<div class="table-responsive">
  <table class="table table-hover table-bordered">
    <thead>
      <tr>
        <th>City</th>
        <th>Search Params</th>
        <th>Matches</th>
      </tr>
    </thead>
    <tbody>
      <% @alerts.each do |alert| %>
        <tr>
          <td><%= link_to(alert.city, alert_path(alert)) %></td>
          <td><%= alert.search_params %></td>
          <td><%= alert.craigslist_posts.count %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
